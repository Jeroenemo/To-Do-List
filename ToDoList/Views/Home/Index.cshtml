@{
  Layout = "_Layout";
}
@model List<ToDoList.Models.Category>;

<h1>Welcome to the To Do List!</h1>
@if (@Model.Count == 0)
{
  <h3>No categories have been entered yet, please enter a category</h3>
  <p>@Html.ActionLink("Add new category", "Create", "Categories")</p>
}
else
{
  <p>@Html.ActionLink("See all categories", "Index", "Categories")</p>
  <p>@Html.ActionLink("See all items", "Index", "Items")</p> 
}